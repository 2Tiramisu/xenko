namespace SiliconStudio.Paradox.Graphics.Tests
{
    /// <summary>
    /// A shader performing Lambertian pre-filtering.
    /// </summary>
    internal class ComputeShaderTest: ComputeShaderBase
    {    
        stage int NbOfIterations;
        stage Texture2D<float4> input;
        stage RWTexture2D<float4> output;

        override void Compute()
        {
            float4 Sum;
            for(int i=0; i<NbOfIterations; ++i)
            {                
                for(int u=0; u<NbOfIterations; ++u)
                {
                    Sum += input[streams.GroupId.xy*NbOfIterations + float2(i,u)];
                }
            }
            output[streams.GroupId.xy] = Sum;
        }
    };
}