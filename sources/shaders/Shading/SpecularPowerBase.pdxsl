/// <summary>
/// Helper class to get the specular power.
/// </summary>

#ifndef SPECULAR_POWER_SCALE
# define SPECULAR_POWER_SCALE 13
#endif

class SpecularPowerBase
{
    float ScaleSpecularPower(float value) { 
        return exp2(1.0f + value * SPECULAR_POWER_SCALE);
    }

    float SpecularPowerValue() { 
        return 0.0;
    }
};
