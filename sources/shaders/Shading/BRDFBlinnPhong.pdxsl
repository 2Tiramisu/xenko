/// <summary>
/// Computes a specular color based on Blinn-Phong model.
/// </summary>
class BRDFBlinnPhong : BRDFPhong
{
    override float GetNdotH(float3 L, float3 N, float3 V)
    {
        float3 H = normalize(L + V);
        return saturate(dot(N, H));
    }
};
