class LinearDepth : ComputeColor, Camera
{
    PositionVSBase positionVS = stage;

    override float4 Compute()
    {
        float3 pos = positionVS.PositionVS();
        return -(pos.z + NearClipPlane) / (FarClipPlane - NearClipPlane);
    }
};