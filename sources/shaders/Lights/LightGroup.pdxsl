namespace SiliconStudio.Paradox.Effects.Lights
{
    /// <summary>
    /// Defines a group of similar lights (directional, spot...etc.)
    /// </summary>
    internal class LightGroup : LightStream, ShadowGroup, NormalStream
    {
        cbuffer PerPass
        {
            int LightCount;
        }

        int GetMaxLightCount()
        {
            return 0;
        }

        /// <summary>
        /// Gets the number of lights of this group
        /// </summary>
        int GetLightCount()
        {
            return LightCount;
        }

        /// <summary>
        /// Compute the light color/direction for the specified index within this group
        /// </summary>
        void ComputeLight(int lightIndex)
        {
            // Computes the shadowColor
            ComputeShadow(lightIndex);

            // Compute the final color with NdotL
            streams.lightColorNdotL = streams.lightColor * streams.shadowColor * dot(streams.lightDirectionVS, streams.normalVS);
        }
    };
}