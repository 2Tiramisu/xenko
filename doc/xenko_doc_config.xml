<config xmlns="SharpDoc">
  <!-- Title of the generated documentation -->
  <title>Xenko Documentation</title>

  <!-- Defines the styles used. Apply first Xenko and after Standard style -->
  <style>Xenko</style>
  <style-dir>Style</style-dir>

  <!-- Generate default and docpak -->
  <output-dir>.\xenko_doc_output</output-dir>

  <!-- If a new topic is referenced but the file is not yet created, use sharpdoc-template.html file as a template -->
  <!-- Disabled for the moment
  <topic-template>xenko-template.html</topic-template>
  -->

  <!-- Topics -->
  <topic id="Xenko" page-id="main" name="Xenko Documentation" webdoc="confluence:PDXDOC/Xenko+Documentation">
  
    <topic id="Xenko" page-id="main_topics" name="Main Topics" webdoc="confluence:PDXDOC/Main+Topics" inline="true"/>
    
    <!-- Special topic X:ClassLibrary to include generated class library references. No filename to setup as it is generated -->
    <topic id="X:ClassLibraryReference" page-id="api" name="Class Library Reference" async-load="true" index="100" on-url="true"/>

    <topic id="X:KnownIssues" page-id="known-issues" name="Known Issues" webdoc="confluence:PDXDOC/Known+Issues" />

    <topic id="X:Licensing" page-id="licensing" name="Licensing"  webdoc="confluence:PDXDOC/Licensing" />

  </topic>

  <!-- List the assemblies to include for the class library-->
  
